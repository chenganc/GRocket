<div class="box">
  <div class="posts">
    <br>
    <div class="cen">
      <h1>Upcoming events</h1>
      <div class="eventtb">
        <table align="center">
          <tr>
            <th>Title</th>
            <th>Created by</th>
            <th>Starts at</th>
            <th>Ends at</th>
            <th>All day</th>
            <th>Description</th>
            <th colspan="3">Operations</th>

          </tr>

        <% @events.reverse.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.user.firstName %></td>
            <td><%= event.starts_at %></td>
            <td><%= event.ends_at %></td>
            <td><%= event.all_day %></td>
            <td><%= event.description %></td>
            <td><%= link_to 'Show', event %></td>
              <% if event.user == current_user || current_user.admin?-%>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
            <% end %>
          </tr>
        <% end %>
        </table>
      </div>
      <br />

      <%= link_to 'New Event', new_event_path, class: "btn btn-default btn-sm"  %>
      <%= link_to 'View Calendar', calendar_path, class: "btn btn-default btn-sm"  %>
      <br>
      <br>
    </div>
  </div>
</div>
