<div class="box">
  <div class="posts">
    <br>
    <div class="cen">
      <p id="notice"><%= notice %></p>
      <p>
        <b>Title:</b>
        <%= @event.title %>
      </p>

      <p>
        <b>Starts at:</b>
        <%= @event.starts_at %>
      </p>

      <p>
        <b>Ends at:</b>
        <%= @event.ends_at %>
      </p>

      <p>
        <b>All day:</b>
        <% if @event.all_day-%>
          Yes
        <% else %>
          No
        <% end %>
      </p>

      <p>
        <b>Description:</b>
        <%= @event.description %>
      </p>
      <%= link_to 'Edit', edit_event_path(@event) %> |
      <%= link_to 'Back', events_path %>
      <br>
      <br>
    </div>
  </div>
</div>
