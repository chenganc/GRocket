<header class="navbar navbar-fixed-top navbar-inverse">
    <%= favicon_link_tag 'favicon.ico' %>
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-left">
            <%= link_to image_tag("rocket-2-01.png",alt: "rocket logo"),
            root_path %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to "Courses", current_user %></li>
            <% else %>
              <li><%= link_to "Home", root_path %></li>
            <% end %>

            <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.firstName%> <%=current_user.lastName %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Change Information", edit_user_path(current_user) %> </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>




            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>

          </ul>
        </nav>
      </div>
    </header>
