<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="center ">
      <%= form_for(@resumelist) do |f| %>
        <% if @resumelist.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@resumelist.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
            <% @resumelist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :content %><br>
          <%= f.text_field :content, placeholder: "Heading or point", class: "form-control" %>
        </div>
        
        <div class="form-group">
        <%= f.label :section %><br>
        <%= f.radio_button(:section, "heading") %>
        <%= f.label(:section_heading, "Title") %>
        <%= f.radio_button(:section, "point") %>
        <%= f.label(:section_point, "detail") %>
        </div>
        
        <div class="form-group">
          <%= f.label :start %><br>
          <%= f.date_field (:start) %>
        </div>
        
         <div class="form-group">
          <%= f.label :finish %><br>
          <%= f.date_field (:finish) %>
        </div>
        
        <br></br>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
</div>
