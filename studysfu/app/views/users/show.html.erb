                  <div class="row">
                      <div class="col-md-4">
                          <div class="card">
                              <div class="header">
                                  <h4 class="title">User Information</h4>
                                  <p class="category">Personal Information</p>
                              </div>
                              <div class="content"> 
                                <%= link_to gravatar_for(@user,size:50), user_path %> </h1>
                                <aside>
                                <section class='user_info'>
                                  <strong>Email:</strong><%= @user.email %><br>
                                  <strong>Firstname:</strong><%= @user.firstName %><br>
                                  <strong>Lastname:</strong><%= @user.lastName %><br>
                                </section>
                                </aside>
                              </div>
                          </div>
                      </div>      

                  </div>   <!-- row -->

                  <div class="row">
                      <div class="col-md-8"><!-- entry-->
                          <div class="card ">
                              <div class="header">
                                  <h4 class="title">Tasks</h4>
                                  <p class="category">Backend development</p>
                              </div>
                              <div class="content">                      
                                  <div class="table-full-width">
                                      <table class="table">
                                          <tbody>
                                            <% if @user.posts.any? %>
                                            <% @posts.each do |post| %>
                                              <tr>
                                                <td class="td-actions text-left">
                                                  <aside>
                                                    <section class="user_info">
                                                    <%= link_to gravatar_for(post.user, size: 50), post.user %>
                                                      <span class="title"><strong><%= post.title %> </strong></span>
                                                      <span class="url"><%= post.url %></span>
                                                      <span class="user">Posted by <%= link_to post.user.firstName %>, <%= time_ago_in_words(post.created_at) %> ago. </span>
                                                    </section>
                                                  </aside>
                                                </td>
                                                <td class="td-actions text-right">
                                                    <button type="button" rel="tooltip" title="Edit Task" class="btn btn-info btn-simple btn-xs">
                                                        <%=link_to " ", edit_post_path(post) , class:"fa fa-edit" %>
                                                    </button>
                                                    <button type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs">
                                                        <%=link_to " ", post, method: :delete , class:"fa fa-times" %>
                                                    </button>
                                                </td>                                          
                                              </tr>
                                            <% end %>
                                            <% end %>
                                          </tbody>
                                      </table>
                                  </div>
                                  
                                  <div class="footer">
                                      <hr>
                                      <div class="stats">
